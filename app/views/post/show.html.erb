<div class="w3-main" style="margin:auto;max-width:1260px">
    <div class="w3-container w3-padding-jumpo">
        <%= render partial: "shared/sidebar" %>
        
        <div class="w3-col l9 m9 s12 w3-padding">
            <div style="margin-bottom:30px" class="w3-white w3-container  w3-padding">
                <h1>Sản Phẩm</h1>
                <div class="w3-padding w3-col s6 m6">
                    <img src="http://images.lowes.com/product/converted/084691/084691808169lg.jpg" style="width:100%">
                </div>
                <div class="w3-col s6 m6">
                    <p><strong><span style="color: rgb(41, 105, 176);"><span style="font-size: 18px;"><%= @post.title %></span></span></strong></p>
                    <p><strong><span style="color: rgb(184, 49, 47);"><span style="font-size: 18px;">Tiêu Chuẩn</span></span></strong></p>
                    <p><strong><span style="color: rgb(243, 121, 52);"><span style="font-size: 18px;"><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i></span></span></strong></p>
                    <div class="w3-container">
                        <img src="http://www.iso.org/iso/2012_iso-logo_print.png" style="width:20%">
                        <img src="https://upload.wikimedia.org/wikipedia/commons/7/73/Energy_Star_logo.svg" style="width:20%">
                    </div>
                </div>
            </div>
            
            <div style="margin-bottom:30px" class="w3-white w3-container  w3-padding">
                <%= raw @post.content %>	
            </div>
            <div style="margin-bottom:30px" class="w3-white w3-container  w3-padding">
                <h3>Các Sản Phẩm Cùng Loại</h3>
                <% @posts.each do |post| %>	
						<%= link_to [post.category, post] do %>
							<div class="w3-padding  w3-col l4 m6 ">
								<div  class="w3-card-1 w3-border-bottom">
									<img src="http://www.maylocnuockarofi.com.vn/uploads/images/may-loc-nuoc-karofi/210x140-01.jpg" style="width:100%">
									<div style="min-height:160px" class="w3-white w3-round w3-container">
										<p><strong><span style="color: rgb(41, 105, 176);"><span style="font-size: 18px;"><%= post.title %></span></span></strong></p>
										<p><strong><span style="color: rgb(184, 49, 47);">Gi&aacute;: Li&ecirc;n hệ</span></strong></p>
									</div>
								</div>
							</div>	
						<% end %>	
				<% end %>	
            </div>
        </div>
    </div>
</div>    
<script>
for (var i = 0; i < document.links.length; i++) {
    if (document.links[i].href == document.URL) {
        document.links[i].className = 'active';
    }
}
</script>

